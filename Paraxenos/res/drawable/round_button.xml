<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="140dp"
                android:height="140dp"/>
            <solid
                android:color="#FF00"/>
            <stroke
                android:color="#FF212121"
                android:width="6dp"/>
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#FFDD"
                android:centerColor="#FFDD"
                android:endColor="#FF00"
                android:type="radial"
                android:gradientRadius="80.0"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp"/>
            <solid
                android:color="#FF00"/>
            <stroke
                android:color="#FF212121"
                android:width="6dp"/>
        </shape>
    </item>

</selector>
